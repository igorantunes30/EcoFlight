from picamera2 import Picamera2
import time

# Inicializa a câmera
picam2 = Picamera2()

# Configura a câmera
picam2.start()

# Aguarda 2 segundos para ajustar a exposição
time.sleep(2)

# Captura e salva uma imagem
picam2.capture_file("test_image.jpg")
picam2.stop()

print("Imagem capturada e salva como 'test_image.jpg'")
