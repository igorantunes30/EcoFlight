#include <WiFi.h>

const char* ssid = "NOME_DO_WIFI";
const char* password = "SENHA_DO_WIFI";

void setup() {
  Serial.begin(115200);
  
  // Conectando ao Wi-Fi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Conectando ao Wi-Fi...");
  }
  Serial.println("Conectado ao Wi-Fi");

  // Conectando ao servidor (ESP32 A)
  WiFiClient client;
  if (!client.connect("IP_DO_ESP32_A", 80)) {
    Serial.println("Conexão falhou");
    return;
  }

  Serial.println("Conectado ao ESP32 A");
  
  // Recebendo a imagem
  while (client.connected()) {
    while (client.available()) {
      char c = client.read();
      Serial.write(c);  // Exibindo a imagem recebida no monitor serial
    }
  }
}

void loop() {
  // Não é necessário fazer nada no loop
}
