#include <WiFi.h>
#include <WiFiClient.h>
#include <WiFiServer.h>

const char* ssid = "NOME_DO_WIFI";
const char* password = "SENHA_DO_WIFI";

WiFiServer server(80);

void setup() {
  Serial.begin(115200);
  
  // Conectando ao Wi-Fi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Conectando ao Wi-Fi...");
  }
  Serial.println("Conectado ao Wi-Fi");
  
  // Iniciando o servidor
  server.begin();
  Serial.println("Servidor iniciado");
}

void loop() {
  WiFiClient client = server.available();
  
  if (client) {
    Serial.println("Cliente conectado");
    // Aqui vocÃª pode enviar os dados da imagem em pacotes
    while (client.connected()) {
      // Leitura da imagem (imagem de exemplo)
      const char* image_data = "Exemplo de imagem";
      client.write((const uint8_t*)image_data, strlen(image_data));
      delay(1000); // Envia a imagem a cada 1 segundo
    }
    client.stop();
    Serial.println("Cliente desconectado");
  }
}
